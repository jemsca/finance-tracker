<% if @user_stocks.size > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Symbol</th>
        <th>Current Price</th>
        <% if @user.id == current_user.id %>
          <th>Actions</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @user_stocks.each do |stock| %>
        <tr>
          <td><%= stock.name %></td>
          <td><%= stock.ticker %></td>
          <td><%= stock.last_price %></td>
          <% if @user.id == current_user.id %>
            <td><%= link_to "Remove",
              user_stock_path(stock),
              method: :delete,
              data: { confirm: "Are you sure?" },
              class: "btn btn-xs btn-danger"
              %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="lead">No stocks in this portfolio</p>
<% end %>
